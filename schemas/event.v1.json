{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://invoke-codex-from-claude.local/schemas/event.v1.json",
  "title": "Control Plane Event Envelope v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "event_id",
    "event_type",
    "occurred_at",
    "correlation_id",
    "task_id",
    "run_id",
    "agent_id",
    "actor_type",
    "actor_id",
    "payload"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "event.v1"
    },
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "event_type": {
      "type": "string",
      "pattern": "^(task|run|policy|artifact|system)\\.[a-z_]+$"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "correlation_id": {
      "type": "string",
      "minLength": 1
    },
    "task_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "run_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "agent_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "actor_type": {
      "type": "string",
      "enum": [
        "system",
        "agent",
        "user"
      ]
    },
    "actor_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "payload": {
      "type": "object"
    },
    "meta": {
      "type": "object"
    }
  }
}
